{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Infant Mortality vs Total Fertility Rate (2015)",
    "data": {
        "url": "Demographic_Indicators_2000_2015.csv"
    },
    "transform": [
        {
            "filter": "datum.Time == 2015"
        },
        {
            "filter": "isValid(datum.IMR) && isValid(datum.TFR) && isValid(datum.LEx)"
        }
    ],
    "mark": {
        "type": "point",
        "filled": true,
        "opacity": 0.7
    },
    "encoding": {
        "x": {
            "field": "TFR",
            "type": "quantitative",
            "title": "Total Fertility Rate (births per woman)",
            "scale": {
                "type": "log"
            }
        },
        "y": {
            "field": "IMR",
            "type": "quantitative",
            "title": "Infant Mortality (per 1,000 live births)",
            "scale": {
                "type": "log"
            }
        },
        "color": {
            "field": "LEx",
            "type": "quantitative",
            "title": "Life Expectancy (years)",
            "scale": {
                "scheme": "blues"
            }
        },
        "tooltip": [
            {
                "field": "Location",
                "type": "nominal"
            },
            {
                "field": "TFR",
                "type": "quantitative"
            },
            {
                "field": "IMR",
                "type": "quantitative"
            },
            {
                "field": "LEx",
                "type": "quantitative"
            }
        ]
    }
}